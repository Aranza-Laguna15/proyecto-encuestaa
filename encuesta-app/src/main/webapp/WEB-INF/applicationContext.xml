     <bean id="encuesta" class="org.encuesta.service.EncuestaService"/>
     <wss:binding url="/EncuestaService">
         <wss:service>
             <ws:service bean="#encuesta"/>
         </wss:service>        
     </wss:binding>
      -->
</beans>