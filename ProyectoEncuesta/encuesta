create database encuesta;
use encuesta;

create table users(
	username varchar(10) not null,
	password varchar(300) not null,
	name varchar(100) not null,
	enabled boolean not null,
	primary key(username)
);

create table user_roles(
	user_role_id int not null auto_increment,
	username varchar(10) not null,
	role varchar(100) not null,
	primary key(user_role_id)
);

drop table if exists informacion;
create table informacion(
	idinformacion int not null auto_increment,
	nombreNegocio varchar(100) not null,
	giroNegocio varchar(100) not null,
	nombre varchar(200) not null,
	telefono varchar(10) not null,
	direccion varchar(550) not null,
	cmpActual varchar(100) not null,
	comiActual double not null,
	lat double not null,
	lgt double not null, 
	username varchar(10) not null,
	fecha datetime not null,
	primary key(idinformacion)
);
